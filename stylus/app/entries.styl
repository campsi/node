#entries
  background url(furley_bg.png)

  h3
    font-weight 600
    font-size .9em
    text-transform: uppercase
    text-shadow 0 1px 1px $dark
    color white
    background linear-gradient(lighten($dark, 20), lighten($dark, 15))
    border-bottom 1px solid $dark
    padding .5em
    padding-top .8em
    margin 0

  .array_item
    position relative
    border-bottom 1px solid darken($light, 10)
    a
      position relative
      text-decoration none
      display block
      color $dark
      background rgba($light, .5)
      padding .5em
      transition background .1s ease-out

      &:hover
        background rgba(lighten($theme, 40), .8)

      img
        max-width 5em
        max-height 5em
      span.id
        display none
        top 0
        right .5em
        z-index 100
        text-transform uppercase
        font-size .7em
        color lighten($dark, 40)
        &::before
          content: '#'

      &.hidden
        display none
      &.active, &:active
        background white

      &.rel
        font-style italic
        font-size: .8em
        padding 0 .5em
        border-top 1px dashed darken($light, 10)

      .template
        h4, .title
          font-weight 600
          color black
          margin 0 0 .2em 0

        .summary
          display block
          color lighten($dark, 40)
          font-weight 300
          font-size: .85em

        $thumbnailSize = 4em
        .thumbnail
          height $thumbnailSize
          width $thumbnailSize
          float left
          overflow hidden
          margin-right 1em
          img
            max-height $thumbnailSize

    button.remove
      display none

#entry
  background white

  header
    button.remove
      light-button(#ffa000)

  button.publish
    dark-button(green)

  .campsi_entry
    padding 1em
    margin 0
    border-left none


    .label
      font-weight 500
      color lighten($dark, 30)
      font-size .94em
      margin-bottom .25em

  .form_field
    margin-bottom 1em
  .component.form .component.form
    padding 0
    padding-left 1em
    border-left 1px solid $light

    .form_field
      .label
        font-weight 200
        font-size .90em
        color black


    .array_item, .newItem
      border 1px solid darken($light, 1)
      width 100%
      padding .5em;
      border-radius .5em
      margin-bottom .5em
      display flex
      align-items: center

      > .form
        border-left 0
        margin-left 0


      > .component
        flex 1

      > .container
        width 100%

      > .drag-handle
        cursor all-scroll
        width 1em
        height 1.5em
        background darken($nearWhite, 10)
        margin-right .25em

      > .control
        flex 1

      > button.remove
        margin .5em
        align-self top
        dark-button(red)