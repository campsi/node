.array_item[data-item-type='campsi/entries-and-drafts/item']
  position relative
  line-height 1.9em
  //font-size .9em
  .form-field
    margin-left 1em
    .value, .label
      vertical-align top
      display inline-block
    p
      margin-bottom 0
  .label
    display inline
    margin-right .2em

    &::after
      content ' > '

  ul li
    clear left
    list-style circle
    margin-left 1.2em

  button.remove
    display none

  a
    //border-bottom 2px solid lighten($dark, 20)
    position relative
    text-decoration none
    display block
    //background rgba(white, .1)

    img
      max-width 15em
      max-height 8em
      margin .5em

    span.id
      display none
      //top 0
      //right .5em
      //z-index 100
      text-transform uppercase
      font-size .7em
      background black
      color white
      &::before
        content: '#'

    .tags li
      display inline-block
      padding .2em .3em 0 .3em
      font-size .9em
      margin 0 .5em .5em 0
      border-radius .3em
      line-height 1.5em
      list-style-type none

    &.hidden
      display none

    &.rel
      height 0
      overflow hidden
      font-style italic
      font-size: .8em
      padding 0 .5em
      transition height .2s ease-out

    &.active + .rel {
      height 2em
    }

  &.gu-mirror
    border none
    a
      background transparent
      &.rel
        display none

#entry

  header
    a.back
      @media screen and (min-width: 600px)
        display none

  &.draft
    header button.publish
      display inline-block
    .big-buttons button.publish, .big-buttons button.remove
      display inline-block
    .big-buttons
      display block

  &.new
    header button.delete
      display none
    .big-buttons
      display none

  &.modified
    .big-buttons
      button.save, button.publish
        display inline-block
    .big-buttons
      display block

  .big-buttons
    button.save
      display none

    button.publish
      display none

  .campsi_entry
    margin 0
    border-left none

    .form_field
      padding 1em
      margin-top 1rem
      &.horizontal
        .label
          border none
          min-width 0
          margin-bottom 0

      .label
        font-weight 200
        font-size 1.6em
        //margin-bottom .5em

  .component.form .component.form
    margin-left 1em
    border-bottom-width 2px
    .form_field
      .label
        font-weight 200
        font-size .90em
        color $textColor

#entry .array_item, #entry .newItem, .array_item[data-panel='entry']
  background transparent
  //border 1px solid darken($light, 1)
  width 100%
  padding 0.5em
  border-radius .2em
  margin-bottom 1em
  display flex
  align-items: center
  position relative

  .form_field
    margin-bottom .5em
    &:last-child
      margin-bottom 0

  &.newItem
    margin-bottom 0

    input[type=submit]
      align-self flex-start
      //dark-button($theme)

  input[type=submit]
    margin .5em

  > .form
    border-left 0
    margin-left 0

  > .component
    flex 1

  > .container
    width 100%

  > .drag-handle
    position relative
    cursor all-scroll
    width 1em
    height 1.5em
    //outline 1px solid red
    margin-right .25em
    display block
    opacity 0.3
    background url('../images/ui/drag-handle-3.png') no-repeat
    background-size: 100% 100%;
    transition opacity .2s ease-out
    &:hover
      opacity 1

  > .control
    flex 1

  button.remove
    align-self flex-start
    margin-left 1em