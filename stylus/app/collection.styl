#collection

  .campsi_collection_intro
    display none

  &.new
    > header .buttons.right
      button, a
        display none
    &.modified
      > header button.save
          display inherit
    .campsi_collection_api-doc
      display none
    .campsi_collection_intro
      display block

  .buttons .admin
    dark-button($green)

  > .content
    padding-top $headerHeight

  .form_field
    padding 1em
    padding-bottom 0

    &.big-title
      padding 0

  .component.button
    light-button $theme

  .form_field.identifier
    display none

  .form_field.fields
    margin-top 3em
    //padding-bottom 8em
    //background linear-gradient(160deg, rgba(#BBB, .5), 15%, rgba(#EEE, .5))
    background lighten($dark, 20)
    > .label
      display none
    //  color #525252
    //  font-size 2em
    //  margin-bottom .5em
    .form_field
      padding 0

    >.control > .campsi_component-list > .items.dropzone
      padding-bottom 10em

.campsi_collection_api-doc
  intro()
  article
    margin-bottom 1em
  img
    float right
    max-height 8em


.campsi_collection_intro
  intro()
