#collection

  .campsi_collection_intro
    display none

  &.new
    > header .buttons.right
      button, a
        display none
    &.modified
      > header button.save
        display inherit
    .campsi_collection_api-doc
      display none
    .campsi_collection_intro
      display block

  .buttons .admin
    dark-button($green)

  > .content
    padding-top $headerHeight

  .form_field
    padding 1em
    padding-bottom 0

    &.big-title
      padding 0

  .component.button
    light-button $theme


  .form_field.fields
    margin-top 3em
    padding-bottom 5em
    background lighten($dark, 20)
    > .label
      display none
    .form_field
      padding 0

    > .control > .campsi_component-list > .items.dropzone:empty
      padding-bottom 10em
      border dashed 6px lighten($dark, 10)

      &:after
        content attr(data-placeholder)
        display block
        position absolute
        top 0
        left 0
        right 0
        bottom 0
        font-size 1.5em
        font-weight 100
        color white
        text-align center
        padding 2em

.campsi_collection_intro
  intro()
