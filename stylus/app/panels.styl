$duration = .3s
$easing = cubic-bezier(0.29, 0.56, 0.57, 0.9)
$headerHeight = 3.2em

.panels
  width 100%
  height 100%
  margin 0
  position relative
  //overflow: hidden

  > .panel
    display none
    height 100%
    width 100%
    position absolute
    //top 0
    //left 0
    background $nearWhite
    transition  transform $duration $easing//, width $duration $easing
    overflow none
    transform: translateZ(0);
    //outline: 1px solid darken($light, 5);
    box-sizing content-box



    > .content
      padding-top $headerHeight + 1em
      overflow-y auto
      height 100%
      -webkit-overflow-scrolling touch
      background-size 100%

    &.next
      display none
      transform: translateX(100%)
      &.hidden
        display none

    &.prev
      display block
      transform: translateX(-100%)
      &.hidden
        display none


    .filter
      display inline-block
      width 100%
      padding 1em
      position relative
      i
        position absolute
        top 50%
        left 2em
        height 1em
        margin-top -.5em
      input
        -webkit-appearance textfield
        width 100%
        padding .5em
        border-radius 2em
        text-indent 1.5em

    &.light
      //background-image linear-gradient(200deg, rgba(#FFF, .1), rgba(darken(#FFF, 10), .6)), url(/images/ui/furley_bg.png)
      background $light
      //background url(/images/ui/subtle_grunge.png)
      //background url(/images/ui/white_bed_sheet_@2X.png)
      //background url(/images/ui/bedge_grunge.png)
      //background url(/images/ui/linedpaper.png)
      //background #FFF
      //background-size 50%
      //background-color: #c4def2;
      //background-image: url("http://www.transparenttextures.com/patterns/noisy-grid.png");
      /* This is mostly intended for prototyping; please download the pattern and re-host for production environments. Thank you! */

    &.dark
      color white
      //background url(../images/ui/low_contrast_linen.png) #2f2f2f
      //background url(/images/ui/irongrip.png)
      background $dark
      //background-size 50%
      //box-shadow inset -10px 0 20px rgba(black, .5)

      .form_field .label
        text-shadow black 0 1px 1px

      > header
        background darken($dark, 10)
        border-bottom-color black
        h2
          color white
        .buttons
          a, button
            dark-button($dark)

      > .content
        input[type=submit], button
          dark-button($theme)

      &.scroll > header
        background rgba(black, .7)

      .filter input
        color white
        border 1px solid rgba(black, .4)
        background rgba(black, .2)
        box-shadow inset 0 1px 3px 0 rgba(black, .6)

        &:focus
          outline none
          background rgba(black, .1)

    @media screen and (max-width: 600px)
      &.main
        display block
        transform translateX(0)
        width 100%

    @media screen and (min-width: 600px)
      for $i in 1..10
        $w = $i * 10

        &.w{$w}
          display block
          width unit($w, '%')
          transform translateX(0)
          &.next
            transform translateX(unit(100 / $w * 100, '%'))
          &.prev
            transform translateX(unit(-100, '%'))

        for $j in 1..10
          $l = $j * 10

          &.w{$w}.l{$l}
            transform translateX(unit(100 / $w * $l, '%'));

    > header
      transform: translateZ(0);
      width 100%
      height $headerHeight
      position fixed
      z-index 100
      border 1px solid transparent
      //transition background .3s ease-out//, transform 0 linear .1s
      padding .5em
      padding-bottom .4em

      .buttons.left
        float left
      .buttons.right
        float right

      h2
        font-size 1.5em
        line-height 1.5em
        font-weight 200
        text-align center
        margin 0 auto
        color $dark

      .buttons

        button, a
          display inline-block
          margin 0 .25rem
          light-button(darken($light, 30))

          &.save
            dark-button($theme)
            display none

          &.favorite
            dark-button($orange)

          &.publish
            display none

          &.delete
            dark-button($red)

    &.scroll
      > header
        background rgba(darken($light, 5), .9)

    &.modified

      header
        h2:
        :after, h2:after
          content ' *'

        .buttons button.save
          display inline-block

        .buttons button.publish
          display inline-block