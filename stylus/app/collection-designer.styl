.array_item[data-item-type='campsi/collection-designer/field']
  margin-bottom .5em
  position relative

  &:last-child
    margin-bottom 0

  &:first-child
    margin-top 1em

  > button.remove
    display none

  .placeholder
    padding 1em
    width 100%
    color darken($light, 20)
    font-style italic
    border 3px dashed darken($light, 10)
    text-align center
    border-radius .5em

.campsi_component-list
  position relative
  margin-top .5em

  > .items.dropzone:empty
    min-height 5em;
    border 3px dashed darken($light, 10)

.campsi_collection-designer_field
  background white
  border 1px solid lighten($dark, 40)
  border-bottom-width 3px
  border-bottom-color lighten($dark, 60)

  width 100%
  border-radius .25em
  overflow hidden

  > .items
    background darken($light, 10)
    padding .5em


  header
    $background= lighten($dark, 50)
    display flex
    align-items center
    background $background
    padding .25em

    .type, .identifier
      line-height 1.5em
      margin-left .5em
      color $nearWhite
      font-size 1.2em

    .type
      font-weight lighter

    .identifier
      font-weight 500
      text-shadow lighten($dark, 40) 0 1px 0

    .spacer
      flex 1
      //border 1px solid greenyellow

    .drag-handle
      //border 1px solid blue
      height 1.5em
      width 1.5em
      text-align center
      font-size 0.8em
      color white;

    button
      background darken($background, 5)
      margin-left .2em
      color white
      border none
      overflow hidden

  > .form
    padding .5em

  &.closed
    border-bottom-width 1px
    > .form
      display none

  .form_field
    display flex
    margin-bottom .2em

    .label
      margin 0
      margin-right 1rem
      min-width 5rem
      align-self center
      text-align right

    .control
      flex 1
      align-self center

      input
        width 100%

.form-field-name
  font-size 0.75em

.form-field-name input
  font-size 1em

#designer

  .cell
    background darken($light, 2)

  .component.title
    font-size 2em

    input
      font-size 2em;
      font-weight lighter

  .content
    padding 2rem


.component-type
  display block
  background $theme
  color $nearWhite
  border-radius .5em
  padding  0.25em .5em
  border 1px solid darken($theme, 5)
  border-bottom 3px solid darken($theme, 20)

.campsi_collection-list_wizard
  h4
    font-weight 500
    color $dark
    font-size 0.9em
  p
    font-size 0.85em
    color lighten($dark, 20)

