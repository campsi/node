.campsi_collection
  &.highlighted
    .campsi_collection-designer_field
      > header
        opacity .4
      &.highlight
        > header
          opacity 1

.array_item[data-item-type='campsi/collection-designer/field']
  margin-bottom 1em
  position relative

  &:last-child
    margin-bottom 0

  > button.remove
    display none


.campsi_component-list

  position relative

  > .items.dropzone
    padding-bottom 1em
    border-radius 1em
    transition padding-bottom .5s ease-in
    border 2px dashed transparent

    &:empty

      &:after
        content attr(data-placeholder)
        display block
        font-size 1.5em
        font-weight 100
        color $dark
        text-align center
        padding 2em

      .gu-transit
        display none



.form_field[data-comp-type="campsi/component-chooser"]
  margin-top .5em

  .campsi_component-chooser
    padding 1em
    border-radius .5em
    display flex

    .placeholder
      align-self center
      margin-right 1em

    .form
      flex 1

  .label
    display none

  .form_field.form_fields
    margin-top .75em
    > .label
      display none

.form-field-name
  font-size 0.75em

.form-field-name input
  font-size 1em

#designer


  .component.title
    font-size 2em

    input
      font-size 2em;
      font-weight lighter

  .content
    padding 2rem
    padding-top $headerHeight + 2rem

.component-type
  display block



#fieldProperties
  > .content
    padding-top $headerHeight

body.dragging .campsi_component-list
  > .items.dropzone.hovered
    padding-bottom 6em

  > .placeholder
    display none

.campsi_collection-designer_field
  background white
  width 100%
  border-radius .5em
  overflow hidden

  &.noname .advanced
    display none

  > .items
    padding .5em

  header
    display flex
    align-items center
    padding .25em .5em .3em .5em
    font-size .9em
    transition background .2s linear

    .identifier
      background transparent
      border none
      line-height 1.5em
      margin-left .5em
      padding 0 .5em
      border-radius .2em
      font-size 1.2em
      font-weight 500
      flex 1
      &:focus, &:hover
        outline none
    .type
      margin-left .5em
      //border 1px solid red
      //display table-cell
      //vertical-align middle
      height 1.5em
      img
        max-height 100%
        vertical-align baseline

    //border 1px solid greenyellow

    .drag-handle
      //border 1px solid blue
      height 1.5em
      width 1.5em
      text-align center
      font-size 0.8em
      color white;
      background url(/images/ui/drag-handle-3.png) no-repeat
      cursor all-scroll
      background-size: 100% 100%;
      transition opacity .2s ease-out
      opacity 0.5

      &:hover
        opacity 1

    button
      margin-left .2em
      color white

      border-color transparent
      overflow hidden

  > .form
    padding 0

  &.closed
    border-bottom-width 1px
    > .form
      display none

  .component-options-form > .fields > .form_field
    padding .5em
    .label
      text-align left
      font-size 1em !important
      font-weight 400
      padding .5em

    &.form-field-label
      .label
        display none

    .control
      flex 1
      align-self center

      input
        width 100%
        &[type=radio], &[type=checkbox]
          width auto

    .form_field
      padding 0
