#project

  .campsi_project.admin
    header .buttons.right
      display none

    .form_field.collections
      .edit.btn
        display none

  .campsi_project.designer

    header .buttons.right
      display inherit

    .form_field.collections
      .edit.btn
        display inline-block

  &.new
    > header .buttons.right
      button, a
        display none
      .save
        display inherit
    .form_field.collections, .form_field.icon
      display none
    .campsi_project_intro
      display block

  .campsi_project_intro
    display none

  > .content
    padding-top $headerHeight

  .form_field
    padding 1em 1.5em 0 1.5em

    &.big-title
      padding 0

  //.form_field.icon
  //  background white

  .project-name
    font-size: 2em

  .collections
    margin-top 3em
    padding 1.5em
    background lighten($dark, 10)
    clear left
  //border-radius .3em
  //box-shadow inset 0 3px 40px black

  .campsi_collection-list
    .newItem
      input[type=submit]
        display inherit
        dark-button $theme
    .placeholder
      color $light
      font-weight 100
      font-size 1.2em

  .template
    display block
    float left
    margin-right 0.5em

    input
      display none
    .icon
      border-radius .5em
      display block
      height 6em
      width 6em
      background lighten($dark, 20)
      background-size 4em
      background-clip content-box
      background-position: 50% 50%
      background-repeat no-repeat
      border 1px solid darken($dark, 5)
      border-bottom-color darken($dark, 20)
      transition background-color .1s ease-out
    &.selected
      .icon
        background-color lighten($dark, 30)
        border-bottom-color darken($dark, 5)
        border-top-color darken($dark, 20)
      .name
        font-weight 500

    .name
      color $lightText
      text-align center
      font-size 0.85em
      display block

  [data-comp-type="campsi/collection-list"]
    > .label
      font-size 1.3em
      font-weight 500
      color white
      text-shadow none
      padding 1em .5em

.array_item[data-item-type="campsi/collection-list/collection"]

  background #FFF
  background lighten($dark, 20)
  color white
  //border .1em solid darken($light, 2)
  //border-bottom-color darken($light, 10)
  box-shadow 0 1px 2px rgba(black, .2)
  border-radius .5em
  margin-bottom: 1em
  padding 1em
  display flex
  align-items center

  img
    display none

  > button.remove
    display none

  > .container
    flex 1

  > .drag-handle
    position relative
    cursor all-scroll
    width 1em
    height 1.5em
    //outline 1px solid red
    margin-right .5em
    display block
    opacity 0.3
    background url('../images/ui/drag-handle-3.png') no-repeat
    background-size: 100% 100%;
    transition opacity .2s ease-out

    &:hover
      opacity 1

  &.active
    background darken(#FFF, 5)
    border .1em solid darken($light, 2)
    border-top-color darken($light, 10)

  .campsi_collection-list_collection
    display: flex;
    align-items: center;
    flex 1
    width 100%
    .icon
      float left
      margin 0 1em
      height 2em
      width 2em
      border none
    .name
      line-height 2em
      display inline
      flex 1
      padding 0 1em
    .buttons
      float right

  .buttons a, .buttons button
    margin-left .5em
    //text-shadow rgba(black, .5) 0 1px 1px
    dark-button $green
    font-size 1.1em

    &.edit
      dark-button $orange

    &:hover
      opacity 1

  button.remove
    dark-button($red)

#projectUsers, #projectDeployments, #billing
  > .content
    padding-top $headerHeight


#projectDeployments

  input[type=submit]
    display block
    light-button($theme)

#project.empty
  .btn.design,
  .btn.edit,
  .form_field.identifier,
  .form_field.icon,
  .form_field.collections
    display none

.campsi_collection-list_wizard
  margin-top 3em
  h4
    font-weight 500
    color $light
    font-size 1.2em
  p
    font-size 0.85em
    color $lightText

.campsi_collection-list
  input[type=submit]
    light-button($theme)

#projectUsers .pane.confirmation, #projectUsers .pane.error
  position absolute
  top 0
  left 0
  right 0
  bottom 0
  background rgba(black, .8);
  padding-top 20em
  text-align center
  display none

  opacity 0

  i
    display block

  &.confirmation
    i
      color lighten(forestgreen, 20)

  &.visible
    display block
    animation fadeIn .5s
    opacity 1

.campsi_project_intro
  intro()