#project

  .campsi_project > .form > .fields > .form_field
    padding 1rem
    .label
      font-size 1.2em
      padding .5em 0
    &:nth-child(even)
      background lighten($light, 2)
    &.big-title
      padding 0
      margin-top 1em

  .billing
    display none


  .campsi_project.admin
    header .buttons.right
      display none

    .form_field.collections
      .edit.btn
        display none

  .campsi_project.designer

    header .buttons.right
      display inherit

    .form_field.collections
      .edit.btn
        display inline-block

  &.new
    > header .buttons.right button, a
        display none
    .form_field.collections, .form_field.icon, .form_field.notes
      display none
    .form_field .errors
      display none
    .campsi_project_intro
      display block

  &.new.modified
    > header .buttons.right .save
      display inline-block

    .form_field .errors
      display block
      &:empty
        display none

  &.demo
    > header .buttons.right
      display none

  .campsi_project_intro
    display none

  > .content
    padding-top $headerHeight


  .project-name
    font-size: 2em

  .collections
    margin-top 3em
    padding 1.5em
    padding-bottom 8em
    background lighten($dark, 10)
    clear left


#projectUsers, #billing
  > .content
    padding-top $headerHeight

#project.empty
  .btn.design,
  .btn.edit,
  .form_field.identifier,
  .form_field.icon,
  .form_field.collections
    display none


#projectUsers .pane.confirmation, #projectUsers .pane.error
  position absolute
  top 0
  left 0
  right 0
  bottom 0
  background rgba(black, .8);
  padding-top 20em
  text-align center
  display none

  opacity 0

  i
    display block

  &.confirmation
    i
      color lighten(forestgreen, 20)

  &.visible
    display block
    animation fadeIn .5s
    opacity 1

.campsi_project_intro
  intro()