@media screen and (max-width: 600px)
  span.break
    display block
  #landing
    h1
      margin-top .7em
      font-size 3em
    p.baseline
      font-size 1em
    .hero
      position relative
      top 0
      margin-top 0
    #hi_section
      h1
        font-size 6em
      p.baseline
        font-weight 400
        font-size 1.5em
        line-height 2em
    #why_section
      h2
        margin-top 1em
      .questions_container
        margin-top 0
      .questions
        font-size .6em
        font-weight 400
        ul
          margin .4em
