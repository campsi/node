#projects

  &.w20
    > header .buttons span
      display none

  text-align center

  .content
    padding auto 2em
    padding-bottom 5em

  .array_item button.remove
    display none

  .newItem
    input[type=submit]
      display none

  .campsi_project-list
    text-align center

  .items
    display inline-block

  .array_item, .newItem
    display inline-block
    margin 1em

  .campsi_project-list_project
    display inline-block
    text-align: center
    cursor pointer
    width 10rem
    margin 0 auto
    text-decoration none
    color white
    text-shadow 0 1px 1px #000
    position relative

    &.demo .logo::after
      content: 'demo'
      text-shadow none
      background $theme
      color white
      font-size .7em
      font-weight 500
      position absolute
      display none
      width 100%
      bottom 0
      left 0
      opacity .5

    .title
      text-align center
      display block
      margin-top .5em
      text-overflow ellipsis
      height 2em
      white-space nowrap
      overflow hidden

    .logo
      position relative
      background linear-gradient(darken($light, 20), darken($light, 15))
      border 4px solid darken($dark, 5)
      border-radius 1em
      overflow hidden
      width 12em
      height 12em

      img
        width 100%
        height 100%
        display none
        &[src]
          display inline-block

    &.active
      .logo
        border-color $theme



  .items
    display inline
  .newItem
    display inline-block
    .campsi_project-list_project
      opacity 0.5
      transition opacity .1s ease-out
      &:hover
        opacity 1
      img
        display none




