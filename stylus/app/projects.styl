

#projects

  text-align center

  .content
    padding auto 2em
    padding-bottom 5em

  .array_item button.remove
    display none

  .newItem
    input[type=submit]
      display none

  .campsi_project-list
    text-align center

  .items
    display inline-block

  .array_item, .newItem
    display inline-block
    margin 1em

  .campsi_project-list_project
    display inline-block
    text-align: center
    cursor pointer
    width 10rem
    margin 0 auto
    text-decoration none
    color white
    text-shadow 0 1px 1px #000
    position relative

    &.demo::after
      content: 'demo'
      text-shadow none
      background $red
      color white
      font-size .7em
      font-weight 500
      position absolute
      display block
      width 4em
      height 4em
      line-height 4em
      border-radius 4em
      top -5px
      right -5px

    .title
      text-align center
      display block
      margin-top .5em
      text-overflow ellipsis
      height 2em
      white-space nowrap
      overflow hidden

    .logo
      background lighten($dark, 10)
      border 2px solid darken($dark, 5)
      border-radius 1em
      overflow auto
      width 12em
      height 12em
      transition all .1s ease-out

      img
        width 100%
        height 100%
        display none
        &[src]
          display inline-block

    &.active
      .logo
        background lighten($dark, 13)
        transform scale(1.1)




  .items
    display inline
  .newItem
    display inline-block
    .campsi_project-list_project
      opacity 0.5
      transition opacity .1s ease-out
      &:hover
        opacity 1
      img
        display none




