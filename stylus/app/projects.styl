#projects

  background url(furley_bg.png)

  .content
    padding auto 2em

  & > header a.back
    display none

  &.main > header a.back
    display inline-block

  .array_item button.remove
    display none

  .newItem
    input[type=submit]
      display none

  .campsi_project-list
    text-align center

  .items
    display inline-block

  .array_item, .newItem
    display inline-block
    margin 1em

  .campsi_project-list_project
    display inline-block
    text-align: center
    cursor pointer
    width 10rem
    margin 0 auto
    text-decoration none
    color $dark
    position relative

    &.demo .logo::after
      content: 'demo'
      background radial-gradient(farthest-side ellipse at top left, #F96E44, darken(red, 10))
      box-shadow rgba(0,0,0,0.7) 0 1px 2px
      color white
      font-size .6em
      font-weight 700
      text-shadow rgba(black, .8) 0 1px 1px
      position absolute
      display block
      width 4em
      height 4em
      line-height 4em
      border-radius 4em
      top -5px
      right -5px
      border 1px solid #C30000

    &:hover
      .logo
        border-color darken($light, 6)
        transform scaleX(1.05) scaleY(1.05)

    &.active .logo, &.active:hover .logo
      //border darken($light, 20) 3px solid
      transform scaleX(1.1) scaleY(1.1)

    .title
      text-align center
      display block
      margin-top .5em

    &.placeholder

      opacity .5
      transition opacity .1s

      &:hover
        opacity 1

      .name
        font-style italic

      .logo
        border 1px dashed darken($light, 20)
        box-shadow none
        color $theme
        /*font-size em*/
        text-align center



    .wrapper
      display: inline-block;
      position: relative;
      width: 100%;

      .spacer
        margin-top: 100%;

      .logo
        position absolute
        top 0
        bottom 0
        left 0
        right 0


        box-sizing content-box
        background-color #FFF
        background-size 80%
        background-clip content-box
        background-position: 50% 50%
        background-repeat no-repeat
        background-image url(/images/ui/plus.png)
        /*box-shadow -1px 1px 2px rgba($dark, .1)*/
        border 1px solid darken($light, 5)
        border-bottom 3px solid darken($light, 7)

        //box-shadow 1px 2px 5px 0 rgba($dark, .1)
        border-radius 10px //($logoSize / 6)
        //padding $logoPadding
        overflow visible
        display inline-block

        vertical-align middle
        //transition box-shadow .1s ease-in, transform .1s ease-out
        transition transform .1s ease-out





