#modal, #loading
  background rgba(black, .3)
  position fixed
  top 0
  left 0
  height 100%
  width 100%
  z-index 9000
  display none

#code-editor-container
  position relative
  width 100%
  height 100%

#code-editor
  position relative
  height calc(100% - 2rem)
  width 100%

#app
  transition filter .2s ease-out

@keyframes fadein
  from
    opacity 0
  to
    opacity 1

#loading.visible
  opacity 0
  display block
  animation-name fadeIn
  animation-duration .3s
  animation-delay .5s

#confirm
  display none
  width 100%
  background $actionColor
  box-shadow 0 0 100px black
  padding 2em
  text-align center
  h1
    font-size 1.5em
    color $red
    margin 1em
  p
    font-weight 200

  form
    display inline
  .btn
    margin 1em
  .btn.confirm
    //dark-button($red)
  .btn.cancel
    //dark-button($green)
  &.visible
    display block