.array_item[data-item-type='campsi/collection-designer/field']
  //border-bottom 3px solid lighten($dark, 60)
  //border-radius .5rem
  margin-bottom 1rem
  position relative

  > button.remove
    display none

  .placeholder
    padding 1em
    width 100%
    color darken($light, 20)
    font-style italic
    border 3px dashed darken($light, 10)
    text-align center
    border-radius .5em

.campsi_component-list
  position relative
  margin-top 1rem
  > .items
    min-height 4em

.campsi_collection-designer_field
  background white
  //border 1px solid lighten($dark, 60)
  width 100%
  //border-radius .5em
  overflow hidden

  header
    $background= $contrast
    display flex
    align-items center
    background $background
    padding .25em

    .type
      //border 1px solid red
      color $nearWhite
      font-weight lighter
      font-size 1.5em
      padding .2em

    .spacer
      flex 1
      //border 1px solid greenyellow

    .drag-handle
      //border 1px solid blue
      padding .2em
      color white;

    button
      background darken($background, 5)
      margin-left .2em
      color white
      border none
      overflow hidden

  > .form
    padding .5em

  &.closed > .form
    display none

.form-field-label,
.form-field-name,
.form-field-required
  display flex
  margin-bottom .2em

  .label
    margin 0
    margin-right 1rem
    min-width 5rem
    align-self center
    text-align right

  .control
    flex 1
    align-self center

    input
      width 100%

.form-field-name
  font-size 0.75em

.form-field-name input
  font-size 1em

#collection-designer

  .cell
    background darken($light, 2)

  .component.title
    font-size 2em

    input
      font-size 2em;
      font-weight lighter

  .content
    padding 2rem