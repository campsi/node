$duration = .5s
$easing = ease-in-out


.panels
  width 100%
  height 100%
  margin 0
  position relative
  overflow: hidden

  > .panel
    height 100%
    width 100%
    position absolute
    top 0
    left 0
    //transform none
    transition left $duration $easing, right $duration $easing, width $duration $easing, transform $duration $easing
    //transform translate3d(0, 0, 1px)
    background $nearWhite
    box-sizing content-box

    &.next
      left 100%
      transform none
    &.prev
      left 0
      transform translateX(-100%)

    for num in 1..10
      &.w{num*10}
        width (num*10)%
      &.l{num*10}
        left (num*10)%


    .content
      border-left: 1px solid darken($light, 10);
      h1
        color: rgba($theme, .4)
        font-weight: lighter

    .cell > header
      box-sizing border-box
      display flex
      $headerColor = $theme;
      background $headerColor
      color $light
      border 1px solid transparent
      border-top-color lighten($headerColor, 30%)
      border-right-color lighten($theme, 5);
      border-bottom-color darken($headerColor, 30%)
      border-left-color darken($theme, 15);

      h2
        font-size 1em
        padding 0.5em
        font-weight normal
        text-align center
        margin 0 auto
        display inline-block
        text-shadow 1px 1px 0 darken($theme, 30)
        color: $nearWhite

      .buttons
        margin auto .5em
        display flex

        button, a
          margin .25em
          outline none
          light-button($light)

          &.save
            background $contrast
            border-color lighten($contrast, 20)
            color lighten($contrast, 40)
            display none


    &.modified

      header
        h2::after, h2:after
          content ' *'

        .buttons button.save
          display inherit