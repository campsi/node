#projects

  .cell
    background-color darken($light, 1)
    background-image url(/stylesheets/diagmonds-light.png)

  .content
    padding 2em

  .array_item button.remove
    display none

  form.newItem input[type=submit]
    display none

  .campsi_project-list_project
    float left
    margin 1em
    cursor pointer

    .title
      text-align center
      width 100%
      display inline-block
      margin-top .5em

    &.placeholder

      opacity .5
      transition opacity .1s

      &:hover
        opacity 1

      .name
        font-style italic

      .logo
        border 1px dashed darken($light, 20)
        box-shadow none
        color $theme
        /*font-size em*/
        text-align center

    &:hover
      .logo
        border-color darken($light, 10)
        transform scaleX(1.1) scaleY(1.1)

    .logo

      $logoSize = 9vw // todo responsive
      $logoPadding = 2vw
      $borderWidth = 3px

      box-sizing content-box
      background-color #FFF
      background-size $logoSize - $logoPadding
      background-clip content-box
      background-position: 50% 50%
      background-repeat no-repeat
      background-image url(/images/ui/plus.png)
      /*box-shadow -1px 1px 2px rgba($dark, .1)*/
      border $borderWidth solid darken($light, 5)
      //border-bottom 3px solid darken($light, 10)

      //box-shadow 1px 2px 5px 0 rgba($dark, .1)
      width $logoSize
      height $logoSize
      border-radius 10px //($logoSize / 6)
      //padding $logoPadding
      overflow hidden
      display block

      vertical-align middle
      //transition box-shadow .1s ease-in, transform .1s ease-out
      transition transform .1s ease-out

    .logo.active
      border darken($light, 20) 3px solid
      transform scaleX(1.1) scaleY(1.1)



