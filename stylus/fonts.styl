
$fonts = BlinkMacSystemFont, "Avenir Next", "Raleway", "Helvetica Neue", Helvetica, Arial, sans-serif

html, body
  font-family $fonts
  font-size 12pt
  line-height 1.45em

button, input, select
  font-family $fonts
  line-height 1rem
  font-size 1rem

p
  margin-bottom .5em

p:last-child
  margin-bottom 0

h1, h2, h3, h4
  margin .6em 0 0.6em
  font-weight inherit
  line-height 1.2

h1 {
  margin-top 0
  margin-bottom 1rem
  font-size 2.074em
}

h2
  font-size 1.728em

h3
  font-size 1.44em

h4
  font-size 1.2em

small, .font_small
  font-size 0.833em

.legal
  font-size 0.579em
