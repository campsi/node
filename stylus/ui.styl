.form_field
  position relative
  .label
    font-size .9em
    line-height 1.8em
    color lighten($dark, 15)

    text-shadow 0 1px 0px #FFF

  .help, .errors
    opacity .2
    position relative
    background tint($theme, 80)
    color $theme
    font-style italic
    padding .25em .5em .25em 3em
    margin-top .8em
    border-radius .5em
    font-size .8em
    overflow hidden


    &::before
      text-indent 0
      position absolute
      top 0
      left 0
      background rgba($theme, .5)
      content: '?'
      color white
      display inline-block
      width 2.5em
      height 100%
      text-align center
      line-height 2.5em
      font-weight bold
      border-radius .5em 0 0 .5em
      margin-right 1em

    &.errors
      background rgba($red, .2)
      border-color rgba($red, .1)
      color $red

      &::before
        background rgba(red, .5)
        content: '!'

    &:empty
      display none

  &.horizontal
    flex-wrap wrap
    display flex
    align-items center
    .label
      margin-right 1em
      min-width 8em
    .control
      flex 1
    .help, .errors
      flex 100%

.form_field.focus .help, .form_field.focus .errors
  opacity 1
  &:empty
    display none

.control .label
  font-weight normal
  color darken($light, 60)

