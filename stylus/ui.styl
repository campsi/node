light-button($color)

  background linear-gradient(tint($color, 60), tint($color, 30))
  color white
  border-bottom-color darken($color, 20)
  text-shadow 0 1px 1px darken($color, 20)
  box-shadow 0 1px 1px 0 rgba(darken($color, 30), .9)

  &:hover
    background linear-gradient(tint($color, 70), tint($color, 30))

  &:focus
    box-shadow 0 1px 2px 2px rgba(darken($color, 30), .9)

  &:active, &.active
    box-shadow inset darken($color, 20) 0 1px 2px
    border-bottom none


dark-button($color)

  background linear-gradient(tint($color, 30), tint($color, 10))
  box-shadow 0 1px 1px 0 rgba(darken($color, 50), .5)

  &:hover
    color lighten($color, 50)
    border-color darken($color, 10)
    background linear-gradient(tint($color, 40), tint($color, 10))

  &:focus
    box-shadow 0 1px 2px 1px rgba(darken($color, 50), .7)

  &:active, &.active
    box-shadow inset darken($color, 30) 0 2px 2px


