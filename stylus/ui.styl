/*@import ui*/

light-button($color)

  background $color
  color lighten($color, 30)
  border-bottom-color darken($color, 20)

  &:hover
    background lighten($color, 10)
    border-color $color

  &:active
    background rgba($color, .5)

  &.active
    box-shadow inset darken($color, 20) 0 2px 2px
    border-bottom none

dark-button($color)

  background rgba($color, .2)
  color darken($color, 10)
  border-color $color

  &:hover
    color darken($color, 30)
    border-color darken($color, 30)

  &:active
    background rgba($color, .5)
  &:active
    box-shadow inset darken($color, 20) 0 2px 2px
    background rgba($color, .5)

button, a.btn, .buttons > a, input[type=submit]
  display inline-block
  -webkit-appearance none
  text-decoration none
  text-align center
  outline none
  border-radius .4em
  cursor pointer
  font-size: 0.8em
  padding 0 0.8em
  height 2.4em
  line-height 2.5em
  font-weight 600
  border none
  border-bottom .15em solid transparent
  light-button($light)

  i
    opacity .3
  &:hover i
    opacity 1

  span
    margin-left .25em

  @media screen and (max-width: 1000px)
    i
      opacity .9

    span
      display none

.form_field.horizontal
  display flex
  align-items center
  .label
    margin-right .5em
    min-width 5em
  .control
    flex 1


#app .component.form_field.identifier
  display flex
  background linear-gradient(darken($light, 3), $light);
  padding 1em
  font-size 1em
  align-items baseline
  //border-bottom 1px solid darken($light,5)

  .label
    margin 0 .5em 0 0
    font-size 1em
    font-weight 200
    padding 0
    color #000

  .control
    flex 1
    input
      font-family "Consolas", "Menlo", "Courier", monospace
      background darken(white, 4)
      color $dark
      font-size .8em
      padding .75em
      padding-bottom .5em
  .help .errors
    display none

.component.invisible
  padding 0
  //border-top 1px solid darken($light, 5);
  .control
    position relative
    padding 0

    &::before
      content 'âœŽ'
      color lighten($theme, 10)
      width 1.5em
      height 50%
      text-align center
      font-size 1.5em
      line-height 1.2em
      position absolute
      left 0
      top .8em

    input
      border none
      outline none
      text-indent 1.5em
      background transparent
      display block
      transition background .2s ease-out

      //box-shadow inset
      &:focus
        box-shadow none;
        background: lighten($light, 2)

        align-self: center

.control .label
  font-weight normal
  font-size 1em
  color darken($light, 60)

input.component.text
  /*width: calc(100% - 0.5em);*/
  padding: 0.4em 0.4em 0.2em 0.4em;
  font-size 0.94em
  width: 100%;
  font-family: "Avenir Next";
  border: darken($light, 10) solid 1px;
  transition box-shadow .3s ease-in, box-color .3s ease-in

//box-shadow: inset #ededed 0 1px 1px;
input.component.text::placeholder
  padding-top .2em
  font-weight 200
  font-style: italic

input.component.text:focus
  outline: none;
  border-color: $theme
  box-shadow: inset lighten($theme, 20) 0 0 2px;

input.component.text:disabled
  background darken(white, 5)
  color lighten($dark, 20)

.component.draggable.gu-mirror
  opacity 1

.newItem > input[type=submit]
  display none

.component.file, .component.file_image

  .file-dropzone
    border .3em dashed lighten($light, 4)
    border-radius 1em
    background-position 50% 50%
    background-repeat no-repeat
    background-clip padding-box
    position relative
    overflow hidden

    input[type=file]
      display block
      position absolute
      width 100%
      height 100em
      -webkit-appearance button
      opacity 0

  &.file_image
    .file-dropzone
      width 100%
      height 15rem
    .file
      height 100%
      width 100%
      background-repeat no-repeat
      background-position 50% 50%
      background-size 13rem
      background-clip: content-box;
  //transition: background-image .5s ease-in

  .progress
    position: absolute;
    top: 50%;
    left: 50%;
    margin-left: -50px;
    margin-top: -50px;

#app .form_field.big-title
  //padding 2rem
  background $nearWhite
  border-bottom 1px solid darken($nearWhite, 10)
  font-size 1.5em

  input
    padding .75em
    font-size: 1.5em
    font-weight lighter

    &::placeholder
      padding-top .5em

.component.text_code
  position relative
  width 100%
  height 10rem
  border darken($light, 10) solid 1px
  font-size 10px

.component.text_area
  position relative
  width 100%
  height 10rem
  border: darken($light, 10) solid 1px;

#app .form_field.url

  .label, .control
    padding 0
    display inline-block
    margin 0 1em 0 0

    a
      font-family Menlo, Monaco, Consolas, "Lucida Console", monospace
      font-size .7em
      color lighten($dark, 40)
      font-weight 100
