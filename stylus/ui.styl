/*@import ui*/

light-button($color)

  background linear-gradient(rgba($color, .5), rgba($color, .7))
  color lighten($color, 50)
  border-bottom-color darken($color, 20)
  text-shadow 0 1px 1px darken($color, 20)
  box-shadow 0 1px 1px 0 rgba(darken($color, 30), .9)

  &:hover
    background lighten($color, 10)

  &:active, &.active
    box-shadow inset darken($color, 20) 0 1px 2px
    border-bottom none

dark-button($color)

  background linear-gradient($color, darken($color, 10))
  color lighten($color, 40)
  box-shadow 0 1px 1px 0 rgba(darken($color, 50), .5)

  &:hover
    color lighten($color, 50)
    border-color darken($color, 10)

  &:active, &.active
    box-shadow inset darken($color, 30) 0 2px 2px

button, a.btn, .buttons > a, input[type=submit]
  display inline-block
  -webkit-appearance none
  text-decoration none
  text-align center
  outline none
  border-radius 4px
  cursor pointer
  font-size: 0.9em
  padding 0 0.8em
  height 2.4em
  line-height 2.5em
  font-weight 400
  border none
  light-button($light)

  //&:active, &.active
  //  line-height 2.3em
  //i
  //  opacity .3
  //&:hover i
  //  opacity 1

  span
    margin-left .25em

  @media screen and (max-width: 1000px)
    i
      opacity .9

    span
      display none

.form_field.horizontal
  display flex
  align-items center
  .label
    margin-right .5em
    min-width 5em
  .control
    flex 1

.form_field .errors
  margin-top .4em
  background rgba(red, .1)
  border 1px solid rgba(red, .4)
  padding .2em .4em

  &:empty
    display none

  p
    color red
    font-size 0.75em
    margin 0

#app .component.form_field.identifier
  display flex
  background rgba(black, 0.1)
  padding 1em
  font-size 1em
  align-items baseline
  //border-bottom 1px solid darken($light,5)

  .label
    margin 0 .5em 0 0
    font-size 1em
    font-weight 200
    padding 0
    color #000

  .control
    flex 1
    input
      font-family "Consolas", "Menlo", "Courier", monospace
      background darken(white, 4)
      color $dark
      font-size .8em
      padding .75em
      padding-bottom .5em
  .help .errors
    display none

.component.invisible

  padding 0
  //border-top 1px solid darken($light, 5);
  .control
    position relative
    padding 0

    &::before
      content 'âœŽ'
      color lighten($theme, 10)
      width 1.5em
      height 50%
      text-align center
      font-size 1.5em
      line-height 1.2em
      position absolute
      left 0
      top .8em

    input
      border none
      outline none
      text-indent 1.5em
      background transparent
      display block
      transition background .2s ease-out

      //box-shadow inset
      &:focus
        box-shadow none;
        background: lighten($light, 2)

        align-self: center

.control .label
  font-weight normal
  font-size 1em
  color darken($light, 60)

input.component.text
  /*width: calc(100% - 0.5em);*/
  padding: 0.5em 0.5em 0.4em 0.5em;
  font-size 0.94em
  width: 100%;
  border-radius 4px
  font-family: BlinkMacSystemFont, "Avenir Next";
  border: darken($light, 10) solid 1px
  //border: none
  box-shadow: inset rgba(black, .07) 0 1px 4px 1px
  transition box-shadow .1s ease-in, border-color .1s ease-in

//box-shadow: inset #ededed 0 1px 1px;
input.component.text::placeholder
  padding-top .2em
  font-weight 200
  font-style: italic

input.component.text:focus
  outline: none;
  border-color: lighten($theme, 20)
  box-shadow: inset lighten($theme, 20) 0 0 2px;

input.component.text:disabled
  background darken(white, 5)
  color lighten($dark, 20)

.component.draggable.gu-mirror
  opacity 1

//.newItem > input[type=submit]
//  display none

.component.file, .component.file_image

  .file-dropzone
    border 1px solid darken($light, 5)
    background darken($light, 2)
    box-shadow: inset darken($light, 5) 0 1px 5px 1px
    border-radius 4px
    position relative
    overflow hidden

    input[type=file]
      display block
      position absolute
      width 100%
      height 100em
      -webkit-appearance button
      opacity 0

  &.file_image
    .file-dropzone
      width 100%
      min-height 10rem
      max-height 15rem

    .file
      min-height 10rem
      max-height 15rem
      width 100%
      text-align center
      padding .5em
      vertical-align middle
      img
        vertical-align middle
        max-width 100%
        max-height 14rem

  .progress
    position: absolute;
    top: 50%;
    left: 50%;
    margin-left: -50px;
    margin-top: -50px;

#app .form_field.big-title
  background $nearWhite
  border-bottom 1px solid darken($nearWhite, 10)
  border-top 1px solid darken($nearWhite, 10)
  font-size 1.5em

  input
    padding .75em
    font-size: 1.5em
    font-weight lighter
    box-shadow none
    border-radius 0

    &::placeholder
      padding-top .5em

.component.text_code
  position relative
  width 100%
  height 10rem
  border darken($light, 10) solid 1px
  font-size 10px

.component.text_area
  position relative
  width 100%
  min-height 5rem
  border: darken($light, 10) solid 1px;
  box-shadow: inset rgba(black, .1) 0 1px 1px 1px
  border-radius 4px
  padding .5em
  font-size .90em
  margin 0

  &:focus
    outline: none;
    border-color: lighten($theme, 20)
    box-shadow: inset lighten($theme, 20) 0 0 2px;


#app .form_field.url

  .label, .control
    padding 0
    display inline-block
    margin 0 1em 0 0

    a
