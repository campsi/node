input.component.text
  padding: 0.5em 0.5em 0.4em 0.5em;
  font-size 0.94em
  width: 100%;
  border-radius 4px
  border: darken($light, 6) solid 1px
  border-bottom-color: darken($light, 10)
  box-shadow: inset transparent 0 1px 5px 1px
  transition box-shadow .2s

input.component.text::placeholder
  padding-top 0
  font-weight 200
  font-style: italic

input.component.text:focus
  outline: none;
  border-color: darken($light, 12)
  box-shadow: inset tint($light, 50%) 0 1px 5px 1px

input.component.text:disabled
  background darken(white, 5)
  color lighten($dark, 20)

.component.draggable.gu-mirror
