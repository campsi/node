/*@import ui*/

light-button(color)
  //display inline-block
  background transparent
  border 1px solid lighten(color, 30)
  color lighten(color, 20)
  outline none
  /*font-size 1em*/
  padding .4em .5em .2em .5em
  line-height 1.2em
  border-radius .5em
  cursor pointer
  font-size: 0.8em

  &:hover
    color color
    border-color color
  &:active
    background rgba(color, .1)

button
  light-button($theme)

.component.invisible .control
  position relative
  display: flex

  input
    border none
    outline none
    background transparent
    margin-left .5em
    box-shadow none
    &:focus
      box-shadow none;

  &::before
    content 'âœŽ'
    color darken($nearWhite, 20)
    width 1em
    align-self: center

.control .label
  font-weight normal
  font-size 1em
  color darken($light, 60)

.component.text input
  /*width: calc(100% - 0.5em);*/
  padding: 0.4em 0.4em 0.2em 0.4em;
  width: 100%;
  font-family: "Avenir Next";
  border: darken($light, 5) solid 1px;
  box-shadow: inset #ededed 0 1px 1px;

.component.text input:focus
  outline: none;
  border-color: $theme
  box-shadow: inset lighten($theme, 20) 0 0 2px;

.component.draggable.gu-mirror
  opacity 1

.component.file, .component.file_image

  .file-dropzone
    border .3em dashed $light
    border-radius 1em
    background-position 50% 50%
    background-repeat no-repeat
    background-clip padding-box
    position relative
    overflow hidden

    input[type=file]
      display block
      position absolute
      width 100%
      height 100em
      -webkit-appearance button
      opacity 0

  &.file_image
    .file-dropzone
        width 100%
        height 10rem
      .file
        height 100%
        width 100%
        background-repeat no-repeat
        background-position 50% 50%
        background-size 10rem
        background-clip: content-box;
