@keyframes animateSpans
  from
    transform none

.campsi_landing

  header
    background linear-gradient(#02236a, #0474c7, #a5ccf2)
    //background url(http://campsi.imgix.net/56b0f1c85f9e20f80551b670-Ek8i4sOpl.jpg) no-repeat
    background-size cover
    text-align center
    height 90vh
    position relative
    padding-bottom 200px

    &::after
      display block
      content ''
      max-height 200px
      height 18%
      background url(/images/clouds-smokey.png)
      //background-size 50%
      background-repeat repeat-x
      position absolute
      bottom -10px
      width 100%
    //filter blur(10px)

    h1
      color lighten($theme, 50)
      text-shadow 1px 1px 0 darken($theme, 10), -1px -1px 0 rgba(white, .3)

    .center
      position absolute
      top 50%
      margin-top -150px
      height 300px
      width 100%

    h1
      font-size 160px
      font-weight 100
      height 200px
      text-align center
      width 100%
      line-height 160px

      span
        display inline-block
        animation-name animateSpans
        animation-duration 4s

      .c
        transform rotate(-5deg) translateY(-20px)
      .m
        transform rotate(-5deg) translateY(-30px)
      .s
        transform rotate(-7deg) translateY(-45px)

    h2
      font-size 32px
      font-weight 100
      padding-bottom 100px
      color lighten($theme, 50)
      strong
        font-weight 300

    .auth
      position absolute
      z-index 200
      width 100%
      $authHeight = 3em
      height $authHeight
      text-align center
      line-height $authHeight
      font-size 2em
      button
        width 300px
        dark-button darken($theme, 15)
        margin-right 1em
        border 1px solid darken($theme, 20)
        border-bottom-width 2px

  article
    max-width 940px
    margin 0 auto
    padding 1em
    color $darkText
    margin-bottom 2em

  section.about
    background white
    padding 2em
    padding-top 4em
    text-align center
    font-weight 200

    article
      h3
        font-size 2.2em
        line-height 1.5em
        font-weight 100
        margin 2em

        strong
          color $theme

      .text
        text-align center
        margin 2em auto
        font-size 1.2em
        color darken($light, 40)
        line-height 2em

        p
          margin-bottom 1.5em

  .activities
    overflow hidden
    height 540px
    width 100%
    margin-bottom 1em
    position relative
    list-style-type none

    li
      position absolute
      top 50%
      left 50%
      margin-top -70px
      margin-left -70px
      //overflow hidden
      display table
      padding 10px
      background $theme
      border-radius 140px
      height 140px
      width 140px
      font-size 14px
      color white
      line-height 20px
      //box-shadow 0 2px 20px rgba($theme, .3)
      background radial-gradient($theme, darken($theme, 10))
      //animation-name animateSpans
      //animation-duration 3s
      transition transform 1s ease-out, opacity 1s ease-out

      h4
        //display inline-block
        //line-height 0
        display table-cell
        vertical-align middle
        font-weight 200

      &.with-campsi
        border-radius 5px
        background $light
        color black
        width 200px
        height 220px
        transform translate(255px, -55px) scale(0)
        opacity 0
        border 1px solid darken($light, 10)

  .added-value.visible
    li
      &.activity-cms
        transform scale(1.6, 1.6)
      &.activity-visual-identity
        transform scale(1.2, 1.2) translate(-120px, -135px)
      &.activity-consulting
        transform scale(.9, .9) translate(19px, -203px)
      &.activity-emailing
        transform scale(.8, .8) translate(178px, -146px)
      &.activity-seo
        transform scale(1.1, 1.1) translate(-133px, 133px)
      &.activity-ui
        transform scale(1.3, 1.3) translate(120px, 120px)
      &.activity-dev
        transform scale(1.2, 1.2) translate(-203px, 0)
      &.activity-hosting
        transform scale(.8, .8) translate(-3px, 225px)
      &.activity-cm
        transform scale(.8, .8) translate(224px, 0)

  .activities.with-campsi
    li
      &.with-campsi
        transform translate(255px, -55px) scale(1, 1)
        opacity 1
      &.activity-cms
        transform scale(1.2, 1.2) translate(238px, 0)
        background $green
      &.activity-visual-identity
        transform scale(1.3, 1.3) translate(-125px, -112px)
      &.activity-consulting
        transform scale(1.1, 1.1) translate(-88px, 22px)
      &.activity-emailing
        transform scale(.9, .9) translate(13px, -117px)
      &.activity-seo
        transform scale(1.1, 1.1) translate(-159px, 148px)
      &.activity-ui
        transform scale(1.2, 1.2) translate(3px, 135px)
      &.activity-dev
        transform scale(1.3, 1.3) translate(-213px, 13px)
      &.activity-hosting
        transform scale(.8, .8) translate(60px, 28px)
      &.activity-cm
        transform scale(.9, .9) translate(-357px, 191px)

  .editing
    //perspective 2000px

    div.image
      overflow hidden
      border-radius .5em
      box-shadow 0 2px 10px rgba($dark, .5)
      img
        width 100%

  .components
    list-style none
    margin 0 auto
    li
      display inline-block
      height 130px
      width 100px
      color $dark
      margin 1em
      font-size 12px
      text-align center
      .icon
        display table-cell
        vertical-align middle
        background darken($light, 50)
        border-radius 10px
        height 100px
        width 100px

  article.api
    div.applications
      position relative
      margin-bottom 5em

      span.arrow
        z-index 0
        top 60px
        left 50%
        margin-left -120px
        position absolute
        display block
        height 240px
        width 240px
        &.left
          background url(../images/arrows/left.png)
          transform translate(-52px, 0)
        &.middle
          background url(../images/arrows/middle.png)
        &.right
          background url(../images/arrows/right.png)
          transform translate(60px, 0)

      div
        z-index 10
        display inline-block
        .icon
          height 150px
          width 150px
          margin 30px
          overflow hidden
          img
            height 100%
            width 100%
        &.website, &.api
          .icon
            box-shadow 0 1px 5px rgba($dark, .3)
            border-radius 8px

        &.placeholder
          display block
          height 230px
        &.api
          width 200px
          top 0
          left 50%
          margin-left -100px
          display block
          position absolute

    .tech
      background $light
      border 1px solid darken($light, 5)
      border-radius 10px
      list-style-type none

      h3
        font-size 25px
        margin 20px auto
        font-weight 500
        color $darkText

      li
        display inline-block
        margin 10px
        h4
          font-weight 100

        .icon
          border 1px solid darken($light, 5)
          border-radius 5px
          width 100px
          height 100px
          overflow hidden
        img
          width 100%

  section.pricing
    overflow hidden
    background $theme
    color white
    position relative
    text-align center
    padding-bottom 2em
    perspective 2000px
    background linear-gradient(90deg, rgba(black, 1), rgba(black, 0), rgba(black, 1)), url(../images/money-bg.png)

    &:before
      content ''
      display block
      position absolute
      top 0
      left 0
      width 100%
      height 10px
      z-index 100
      background linear-gradient(black, rgba(black, 0));

    article
      position relative
      color white
      width 940px
      padding 0

    .price
      transform-origin 50% 0
      transform rotateZ(180deg)
      float left
      img
        width 300px

    .freebie
      background linear-gradient(30deg, $theme, lighten($green, 10))
      margin-top 5em
      padding 2em
      text-shadow 1px 1px 3px darken($green, 20)
      h4
        font-size 30px
        line-height 50px
        font-weight bold

    .bullets
      position relative
      padding-left 430px
      padding-top 150px

    h3
      font-size 1.5em
      padding 1em 0

    ul
      text-align left
      list-style-type none
      text-shadow 1px 1px 1px black
      li
        margin-bottom 1em
        font-weight 200
        font-size 15px
        height 30px
        line-height 30px
        position relative
        &:before
          content ''
          height 30px
          width 30px
          left -40px
          top 0
          background url(https://campsi.imgix.net/56b0f1c85f9e20f80551b670-N1Sn2B56g.png?h=30)
          display inline-block
          position absolute

    .beta
      display block
      position absolute
      top 0
      left 0
      width 100%
      height 100%
      background rgba($dark, .8)
      p
        font-family "Marker Felt"
        line-height 5em
        padding-top 2em
        color $white
        text-shadow 0 0 20px rgba($theme, .8)
        font-size 2.5em
        transform rotate(-3deg)


@media screen and (max-width: 600px)
  .campsi_landing
    article
      width 100%
      padding 0
      h3
        font-size 24px
    header
      .center
        top 0
        margin-top 100px
      h1
        font-size 30vw
      h2
        font-size 20px
        line-height 30px

    .added-value
      aside
        display none
        height 240px
        ul
          transform scale(.45)
          width 820px
          height 500px
          top 0
          left 0
          transform-origin -72px 0px

    article.api
      div.applications span.arrow
        display none
      .tech
        h3
          font-size 18px
        li
          margin 5px
          font-size 12px
          .icon
            width 50px
            height 50px

    section.pricing
      article
        width 100%
      .price
        float none

      .bullets
        padding 12px
        margin-left 40px
        font-size 12px

        li
          margin-bottom 2em
          line-height 20px

  .logged-in
    .campsi_landing
      header
        .center
          margin-top 40vh