.campsi_landing

  @keyframes animateSpans
    from
      transform none

  header
    background linear-gradient(30deg, $theme, lighten($theme, 15))
    text-align center
    max-height 650px
    padding 0
    padding-bottom 100px
    position relative

    &::after
      display block
      content ''
      height 140px
      //background linear-gradient(rgba($theme, 0), rgba(darken($theme, 50), .8))
      background url(/images/clouds.png)
      position absolute
      bottom 0
      width 100%

    h1, h2
      //color darken($light, 10)
      color lighten($theme, 50)
      text-shadow 1px 1px 0 rgba($theme,.3), -1px -1px 0 rgba(white, .5)

    h1
      //transform scale(100%)
      padding-top 30px
      font-size 16vw
      font-weight 100

      span
        display inline-block
        animation-name animateSpans
        animation-duration 4s

      .c
        transform rotate(-5deg) translateY(-20px)
      .m
        transform rotate(-5deg) translateY(-30px)
      .s
        transform rotate(-7deg) translateY(-40px)

    h2
      font-style italic
      font-size 3vw
      font-weight 500
      //text-shadow 0 1px 2px rgba(black, .6)
      margin-top 10px
section h2
  font-size 2.5em
  font-weight 200
  text-align center
  margin-bottom 1.5em

section.auth
  $authHeight = 3em
  height $authHeight
  background $theme
  text-align center
  line-height $authHeight
  font-size 2em
  border-bottom 1px solid darken($theme, 10)
  button
    dark-button lighten($theme, 5)
    margin-right 1em
    border 1px solid darken($theme, 10)

section.articles
  background white
  padding 2em
  article
    //intro()
    background $light
    border-radius .5em
    padding 1em
    margin-bottom 2em
    box-shadow inset 0 1px 3px darken($light, 5)

section.pricing
  background $dark
  padding 2em
  color white
  position relative
  text-align center

  .price
    background $theme
    padding 1em
    display inline-block
    text-shadow 1px 1px 3px rgba(black, .3)
    border-radius .2em
    font-size 2em
    font-weight 200
    span
      font-weight 900

  .beta
    //display none
    position absolute
    top 0
    left 10%
    width 80%
    height 100%
    background rgba($dark, .8)
    p
      font-family "Marker Felt"
      line-height 5em
      padding-top 2em
      color $white
      text-shadow 0 0 4px rgba(black, .5)
      font-size 2.5em
      transform rotate(-3deg)


