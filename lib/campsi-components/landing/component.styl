.campsi_landing

  @keyframes animateSpans
    from
      transform none

  header
    //display none
    //background url(http://campsi.imgix.net/56b0f1c85f9e20f80551b670-E1ejFWa3g.jpg?h=650)
    //background url(http://campsi.imgix.net/56b0f1c85f9e20f80551b670-4kEq9Wa2l.jpg?h=650&fit=max)//&blend=CC2c7af4&blur=30)
    //background url(http://campsi.imgix.net/56b0f1c85f9e20f80551b670-NJBAP7T3e.jpeg?h=650&fit=max&blend=552c7af4)//&blend=CC2c7af4&blur=30)
    //background url(http://campsi.imgix.net/56b0f1c85f9e20f80551b670-NJtW97p2x.jpg?h=650&fit=max)//&blend=CC2c7af4&blur=30)
    background url(http://campsi.imgix.net/56b0f1c85f9e20f80551b670-NJtW97p2x.jpg?h=650&fit=max&blend=CC2c7af4)
    background-position center
    background-size cover
    background-repeat no-repeat
    text-align center
    max-height 650px
    padding 0
    padding-bottom 100px
    position relative

    &::after
      display block
      content ''
      height 10em
      background linear-gradient(rgba($theme, 0), rgba(darken($theme, 50), .8))
      position absolute
      bottom 0
      width 100%

    h1, h2
      //color darken($light, 10)
      color lighten($theme, 50)
      text-shadow 1px 1px 0 rgba($theme,.3), -1px -1px 0 rgba(white, .5)

    h1
      //transform scale(100%)
      padding-top 30px
      font-size 20vw
      font-weight 100

      span
        display inline-block
        animation-name animateSpans
        animation-duration 4s

      .c
        transform rotate(-5deg) translateY(-20px)
      .m
        transform rotate(-5deg) translateY(-30px)
      .s
        transform rotate(-7deg) translateY(-40px)

    h2
      font-style italic
      font-size 4vw
      font-weight 500
      //text-shadow 0 1px 2px rgba(black, .6)
      margin-top 10px
section h2
  font-size 2.5em
  font-weight 200
  text-align center
  margin-bottom 1.5em

section.auth
  $authHeight = 3em
  height $authHeight
  background $theme
  text-align center
  line-height $authHeight
  font-size 2em
  border-bottom 1px solid darken($theme, 10)
  button
    dark-button lighten($theme, 5)
    margin-right 1em
    border 1px solid darken($theme, 10)

section.articles
  padding 2em
  article
    intro()
    margin-bottom 2em

section.pricing
  background $dark
  padding 2em
  color white
  position relative
  text-align center

  .price
    background $theme
    padding 1em
    display inline-block
    text-shadow 1px 1px 3px rgba(black, .3)
    border-radius .2em
    font-size 2em
    font-weight 200
    span
      font-weight 900

  .beta
    //display none
    position absolute
    top 0
    left 10%
    width 80%
    height 100%
    background rgba($dark, .8)
    p
      font-family "Marker Felt"
      line-height 5em
      padding-top 2em
      color $white
      text-shadow 0 0 4px rgba(black, .5)
      font-size 2.5em
      transform rotate(-3deg)


