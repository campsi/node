#landing-pricing
  overflow hidden
  background $theme
  color white
  position relative
  text-align center
  padding-bottom 2em
  perspective 2000px
  background linear-gradient(90deg, rgba(black, 1), rgba(black, 0), rgba(black, 1)), url(../images/money-bg.png)

  &:before
    content ''
    display block
    position absolute
    top 0
    left 0
    width 100%
    height 100px
    z-index 100
    background linear-gradient(black, 20%, rgba(black, 0));

  article
    position relative
    color white
    width 940px
    padding 0

  .price
    margin-top -54px
    transform-origin 50% -30px
    transform rotateZ(180deg)
    float left
    img
      width 300px

  .freebie
    background linear-gradient(30deg, $theme, lighten($green, 10))
    margin-top 5em
    padding 2em
    text-shadow 1px 1px 3px darken($green, 20)
    h4
      font-size 30px
      line-height 50px
      font-weight bold

  .bullets
    position relative
    padding-left 430px
    padding-top 150px

  h3
    font-size 1.5em
    padding 1em 0

  ul
    text-align left
    list-style-type none
    text-shadow 1px 1px 1px black
    li
      margin-bottom 1em
      font-weight 200
      font-size 15px
      height 30px
      line-height 30px
      position relative
      &:before
        content ''
        height 30px
        width 30px
        left -40px
        top 0
        background url(https://campsi.imgix.net/56b0f1c85f9e20f80551b670-N1Sn2B56g.png?h=30)
        display inline-block
        position absolute

  .beta
    display block
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    background rgba($dark, .8)
    p
      font-family "Marker Felt"
      line-height 5em
      padding-top 2em
      color white
      text-shadow 0 0 20px rgba($theme, .8)
      font-size 2.5em
      transform rotate(-3deg)
