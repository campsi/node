$facebookTheme = #3b5998

.campsi_publish_facebook_feed-chooser
  .buttons button
    light-button($facebookTheme)
    margin-right 1em
  .chooser
    margin-top .5em
    vertical-align top
    label
      background white
      cursor pointer
      color $facebookTheme
      vertical-align top
      padding .5em
      margin 0 .5em .5em 0
      display inline-block
      text-align center
      border 1px solid lighten($facebookTheme, 30)
      .identity
        float right
        text-align left
        margin-left .5em
      span.name
        font-weight 400
      span.category
        display block
        font-weight 600
        font-size .8em

      img
        border 1px solid rgba($dark, .6)
        vertical-align middle
        position relative
        height 75px
        width 75px

      &.checked
        border 1px solid $facebookTheme

#entry .component.form .campsi_publish_facebook
  background $facebookTheme
  border-radius .3em
  box-shadow 0 1px 4px rgba($facebookTheme, .5)
  color white

  margin-left 0
  border none
  padding 0
  .form_field
    background transparent
    padding .5em
    margin 0

    .label
      color white
      font-weight 400
      font-size 1em