doctype html
html
  head
    title=__("app.title")
    meta(name="theme-color", content="#ffffff")
    meta(name="viewport", content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=0")
    meta(property='og:title', content=__("app.og.title"))
    meta(property='og:site_name', content='Campsi.io')
    meta(property='og:url', content='http://www.campsi.io')
    meta(property='og:image', content='http://campsi.imgix.net/56261291c0e9425a0b9404d8-VkTqdHYze.png')
    meta(property='og:description', content=__("app.og.description"))

    link(rel="apple-touch-icon",sizes="180x180", href="/favicon.ico/apple-icon-180x180.png")
    link(rel="icon", type="image/png", sizes="192x192" , href="/favicon.ico/android-icon-192x192.png")
    link(rel="icon", type="image/png", sizes="96x96", href="/favicon.ico/favicon-96x96.png")
    link(rel="dns-prefetch" href="//campsi.imgix.net/")

    meta(name="msapplication-TileColor", content="#ffffff")
    meta(name="msapplication-TileImage", content="/favicon.ico/ms-icon-144x144.png")


    link(rel='stylesheet', href='/stylesheets/main.css')
    link(rel='stylesheet', href='/lib/font-awesome/css/font-awesome.min.css')
  body
    div#app(class = user ? 'logged-in' : 'visitor')
      block content

    div#loading

    div#modal
      block modal

    script(src='/lib/jquery/dist/jquery.min.js')
    block scripts


    script(type='application/javascript') window.I18N = !{JSON.stringify(translations)};
    script(src='/javascripts/campsi.core.js')
    script(src='/javascripts/campsi.app.js')



