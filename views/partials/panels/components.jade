mixin component(name, label, icon)
  .component.draggable(data-name=name)
    div.icon=icon
    span.name=label

.search
  form
    input(type="search")
    button Search

.standard
  h2 Standard
  .group
    h3 Text & Number
    .components
      +component('form/text', 'Text Field', 'A')
      +component('form/text-area', 'Text Area', 'Abc')
      +component('form/number', 'Number', '0-9')
      +component('form/checkbox', 'Checkbox', 'â˜‘')
      .clear
  .group
